<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/wood_bg1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.lenovo.randomnumber.MainActivity"
    tools:showIn="@layout/activity_main">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberEditTxt"
        android:editable="true"
        android:inputType="number"
        android:textColor="#ff0095"
        android:text="Enter a number"
        android:textSize="25dp"
        android:textStyle="bold"
        android:visibility="visible"
        android:numeric="integer"
        android:padding="15dp"
        android:textAlignment="center"
        android:textColorHint="#ff0095"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="144dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check"
        android:id="@+id/checkBtn"
        android:layout_below="@+id/numberEditTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        style="@style/Animation.AppCompat.DropDownUp"
        android:background="#ff0095"
        android:textSize="25dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:visibility="visible"
        android:textColor="#000000"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart"
        android:id="@+id/newNumBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="50dp"
        android:background="#ff0095"
        android:textSize="15dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:visibility="gone"
        android:textColor="#000000"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Anonymous Number!"
        android:id="@+id/AnonTextView"
        android:editable="true"
        android:inputType="number"
        android:textColor="#ff0095"
        android:textSize="30dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:visibility="visible"
        android:numeric="integer"
        android:padding="15dp"
        android:textAlignment="center"
        android:textColorHint="#ff0095"
        android:textIsSelectable="true"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_alignRight="@+id/newNumBtn"
        android:layout_alignEnd="@+id/newNumBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Guess a Random Number!"
        android:textColor="#000"
        android:id="@+id/guessTextView"
        android:layout_alignBottom="@+id/AnonTextView"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
